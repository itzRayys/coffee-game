script/source = "extends Control
class_name portafilter_shelf

@export var pfilter_container:filter_container_component

@export var filterOffsets:Array[Vector2]
@export var heldFilters:Array[portafilter]

signal receivedPortafilter()
signal clearedPortafilter()

func canReceiveCheck():
	return true
func receivePortafilter(portafilter):
	heldFilters[portafilter.ID] = portafilter
	portafilter.position = global_position + filterOffsets[portafilter.ID]
	print(\"Received: \", portafilter.name, \", at: \", name)
	receivedPortafilter.emit(portafilter)
	portafilter.portafilterChangedLocation.connect(clearPortafilter)
func clearPortafilter(filter):
	heldFilters[filter.ID] = null
	clearedPortafilter.emit()
	filter.portafilterChangedLocation.disconnect(clearPortafilter)
